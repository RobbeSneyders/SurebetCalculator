<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="OddsEditText" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textColorHint">#33FFFFFF</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">phone</item>
        <item name="android:digits">1234567890./</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:theme">@style/EditTextCursorThemeDark</item>
        <item name="android:imeOptions">actionNext</item>
    </style>

    <style name="EditTextHeadlineLight" parent="Base.Widget.AppCompat.EditText">
        <item name="android:textColor">#000000</item>
        <item name="android:textColorHint">#33000000</item>
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Headline</item>
        <item name="android:maxLines">1</item>
        <item name="android:inputType">phone</item>
        <item name="android:theme">@style/EditTextCursorThemeLight</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:imeOptions">actionDone</item>
    </style>

    <style name="EditTextCursorThemeDark">
        <item name="colorControlNormal">@color/hintDark</item>
        <item name="colorControlActivated">@color/colorAccent</item>
        <item name="colorControlHighlight">@color/hintDark</item>
    </style>

    <style name="EditTextCursorThemeLight">
        <item name="colorControlNormal">@color/hintLight</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/hintLight</item>
    </style>

    <style name="EditTextHintAppearanceLight" parent = "@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="checkBoxStyle" parent="Base.Theme.AppCompat">
        <item name="colorAccent">@color/colorPrimary</item>
        <item name="android:textColorSecondary">@android:color/darker_gray</item>
    </style>

</resources>
